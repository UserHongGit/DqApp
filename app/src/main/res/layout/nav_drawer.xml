<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e2e2e2" >

    <include layout="@layout/nav_drawer_header"/>

    <com.hong.ui.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.hong.ui.widget.webview.ProgressWebView
            android:id="@+id/webview_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:webview_background="?android:windowBackground"/>
    </com.hong.ui.widget.CustomerScrollView >

    <include layout="@layout/nav_drawer_foot"/>
</LinearLayout>