<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/headTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新增工序表"
            android:textAlignment="center"
            android:textColor="#f44336"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#00201C1C"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sggxTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:text="施工工序"
            android:textAlignment="center"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sggxAddEt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:hint="施工措施"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sggxAddEt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:hint="施工措施"
            android:textColor="@color/amoled_dark_card_background" />


        <TextView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:text="删除"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sfwcTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:text="是否完成:"
            android:textAlignment="center"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sfwcEt"
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sjTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:text="时间"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sjEt1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:hint="自开始\n时间"
            android:textColor="@color/amoled_dark_card_background" />

        <TextView
            android:id="@+id/sjEt2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:hint="至结束\n时间"
            android:textColor="@color/amoled_dark_card_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left|center_vertical|center_horizontal|center"
            android:hint="输入工序内容"
            android:lines="4" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="添加" />


</LinearLayout>